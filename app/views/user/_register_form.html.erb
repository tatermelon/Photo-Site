<div class="user_form">
  <%= form_for(@user, :url => {:action => :post_register}) do |form| %>
    <table>
      <tr>
        <td>First Name:</td>
        <td><%= form.text_field(:first_name) %></td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td><%= form.text_field(:last_name) %></td>
      </tr>
      <tr>
        <td>Username:</td>
        <td><%= form.text_field(:login) %></td>
      </tr>
      <tr>
        <td>Password:</td>
        <td><%= form.password_field(:password) %></td>
      </tr>
      <tr>
        <td>Re-enter password:</td>
        <td><%= form.password_field(:password_confirmation) %></td>
      </tr>
    </table>
    <div><%= form.submit "Register User" %></div>
  <% end %>
</div>